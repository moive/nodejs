<%- include("template/head", title) %>
    <div class="container">
        <h1>CRUD Mongo</h1>
        <a href="/pets/create" class="btn btn-success my-4">Create new pet</a>
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% if(pets.length > 0) { %>
                    <% pets.forEach(pet =>{ %>
                        <tr>
                            <td><%= pet.id %></td>
                            <td><%= pet.name %></td>
                            <td><%= pet.description %></td>
                            <td>
                                <a href="pets/<%= pet.id %>" class="btn btn-warning btn-sm">Edit</a>
                            </td>
                        </tr>
                    <% }) %>
                <% } %>
            </tbody>
        </table>
    </div>
    <%- include("template/footer") %>